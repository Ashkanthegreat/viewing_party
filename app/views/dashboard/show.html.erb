<h1>Welcome, <%= @user.name %>!</h1>

<div class="Movies">
  <%= button_to "Discover Top 40 Rated Movies", index_path, method: :get %>
  <%= form_tag index_path, method: :get do %>
    <%= label_tag :keyword %>
    <%= text_field_tag :keyword %>
    <%= submit_tag 'Discover Movies with keyword', keyword: :keyword %>
  <% end %>
</div>

<div class="Friends">
  <h3>Add a Friend</h3>
  <%= form_tag '/friends' do %>
   <%= label_tag :friend_email %>
   <%= text_field_tag :friend_email %>
   <%= submit_tag 'Add Friend' %>
  <% end %>
  <% if @user.friends.empty? %>
    <p>You currently have no friends</p>
  <% else %>
    <p>Here are your friends:</p>
      <%= @user.friends.each do |friend| %>
        <%= friend.name %>
      <% end %>
  <% end %>
</div>

