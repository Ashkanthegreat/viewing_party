<h1>Welcome, <%= @user.name %>!</h1>

<%= button_to "Discover Top 10 Rated Movies", top_10_path, method: :get %>

<div class="Friends">
  <h3>Add a Friend</h3>
  <%= form_tag '/friends' do %>
   <%= label_tag :friend_email %>
   <%= text_field_tag :friend_email %>
   <%= submit_tag 'Add Friend' %>
  <% end %>
  <% if @user.friends.empty? %>
    <p>You currently have no friends</p>
  <% else %>
    <p>Here are your friends:</p>
      <%= @user.friends.each do |friend| %>
        <%= friend.name %>
      <% end %>
  <% end %>
</div>

